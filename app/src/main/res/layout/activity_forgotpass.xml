<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgotpass"
    android:background="@color/dirtywhite">

    <ImageView
        android:id="@+id/forgotpassbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/forgotpassbg"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/textForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot"
        android:textColor="@color/white"
        android:fontFamily="@font/aileron_bold"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/textPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/white"
        android:fontFamily="@font/aileron_bold"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textForgot"
        android:layout_marginStart="40dp"/>

    <TextView
        android:id="@+id/newpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12sp"
        android:padding="3dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPass"
        android:layout_marginStart="40dp"/>

    <ImageView
        android:id="@+id/lock"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/lock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/textNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your email, phone, or username and we'll send you a link to change a new password"
        android:textColor="@color/dark"
        android:fontFamily="@font/montserrat_regular"
        android:textAlignment="center"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lock"/>

    <EditText
        android:id="@+id/sendEmail"
        android:layout_width="312dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_box_bg"
        android:hint="email"
        android:textSize="13sp"
        android:fontFamily="@font/montserrat_regular"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textNote"/>

    <View
        android:id="@+id/rectangleShapeFront"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/forgotSend"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="SEND"
        android:fontFamily="@font/aileron_bold"
        android:textColor="@color/navyblue"
        android:backgroundTint="@color/lightblue"
        app:layout_constraintTop_toTopOf="@id/rectangleShapeFront"
        app:layout_constraintStart_toStartOf="@id/rectangleShapeFront"
        app:layout_constraintEnd_toEndOf="@id/rectangleShapeFront"
        android:layout_marginTop="38dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>